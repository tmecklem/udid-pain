source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'sqlite3', '1.3.6'
gem 'jquery-rails'
gem 'haml'
gem 'haml-rails'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem "therubyracer"
  gem "less-rails" #Sprockets (what Rails 3.1 uses for its asset pipeline) supports LESS
